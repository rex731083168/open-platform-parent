		update api_guide 
		set check_state=#{checkState}
		where guide_id in 
		<foreach collection="guideIds" item="item" index="index" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</update> -->
	
	<update id="bathUpdateCheckState">
		update api_guide 
		<set>
			<if test="checkState !=null">
				check_state=#{checkState},
			</if>
			<if test="checkMem !=null">
				check_mem=#{checkMem}
			</if>
		</set>
		where guide_id in 
		<foreach collection="guideIds" item="item" index="index" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</update>
  </mapper>